{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false
  },
  "include": [
    "server.ts", 
    "src/sockets/**/*.ts", 
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
